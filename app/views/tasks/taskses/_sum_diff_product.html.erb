<div id="1" class="card, indent" style="width: 60rem; display: flex; ">
  <span style="width: 780px">
      <%=image_tag('images_list/sum.png', alt: "formula", class:"card-img-top",
        style:"width: 400px; height: 400px; display:inline-block;") %>
      <div class="card-body">
        <h5 class="card-title, stile_text">Sum, difference, product</h5>
        <p class="card-text, stile_text">
         Given two real numbers a and b. Get their sum, difference and product
        </p>
      </div>
  </span>
  <span style="width: 190px">
    <%= form_tag('/tasks', method: 'get') do %>
        <%= label_tag :first_number, "Number a: "%>
        <%= text_field_tag :first_number, params[:first_number], required: true, class: "form-control",
          placeholder: " a"%>
        <%= label_tag :second_number, "Number b:"%>
        <%= text_field_tag :second_number, params[:second_number], required: true, class: "form-control",
          placeholder: " b"%>
        <%= submit_tag "Answer", class:"btn btn-primary", style: "margin-top: 20px" %>
    <% end %>
      <div style="margin-top: 30px">
        <p class="stile_text"> Sum: <%= @task1[:sum] %></p>
        <p class="stile_text"> Difference:<%= @task1[:diff] %></p>
        <p class="stile_text"> Product: <%= @task1[:product] %></p>
      </div>
  </span>
</div>
</div>
